{
  "scripts": {
    "compile": "webpack --config webpack/webpack.config.dev.js",
    "compile:prod": "NODE_ENV=production  webpack --config webpack/webpack.config.prod.js",
    "compile:watch": "node webpack/server",
    "lint": "esw src/",
    "lint:prod": "npm run lint",
    "lint:watch": "npm run lint -- --watch",
    "test": "NODE_ENV=test mocha src/**/*.spec.js src/**/**/*.spec.js --compilers js:babel-core/register",
    "test:prod": "npm test -- --bail",
    "test:watch": "npm test -- --watch",
    "html:prod": "htmlmin src/index.html -o dist/index.html",
    "deploy": "npm run lint:prod && npm run test:prod && npm run compile:prod && npm run html:prod && surge -p dist -d befitting-cream.surge.sh && npm run clean",
    "clean": "rm -rf dist/ src/build",
    "start": "npm run compile:watch"
  },
  "dependencies": {
    "history": "^1.9.1",
    "isomorphic-fetch": "^2.1.1",
    "radium": "^0.14.1",
    "react": "^0.14.0-rc1",
    "react-dom": "^0.14.0-rc1",
    "react-redux": "^3.0.0",
    "react-router": "^1.0.0-rc1",
    "redux": "^3.0.0",
    "redux-logger": "^2.0.0",
    "redux-router": "^1.0.0-beta3",
    "redux-thunk": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^5.8.23",
    "babel-eslint": "^4.0.5",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.0.5",
    "eslint": "^1.0.0",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-plugin-react": "^3.2.0",
    "eslint-watch": "^2.0.0",
    "exenv": "^1.2.0",
    "expect": "^1.9.0",
    "express": "^4.13.3",
    "htmlmin": "0.0.4",
    "jsdom": "^6.5.1",
    "mocha": "^2.2.5",
    "mocha-jsdom": "^1.0.0",
    "nock": "^2.11.0",
    "react-addons-test-utils": "^0.14.0-rc1",
    "react-hot-loader": "^1.2.8",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.0",
    "redbox-react": "^1.0.5",
    "surge": "^0.15.0",
    "webpack": "^1.10.5",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.2.0"
  }
}
